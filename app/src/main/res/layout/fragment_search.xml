<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="16dp">

    <!-- Notification Setting -->
    <TextView
        android:id="@+id/notificationSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GCU Campus Locations"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Country Search -->
    <EditText
        android:id="@+id/countrySearchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for a country"
        android:inputType="text"
        android:layout_below="@id/notificationSetting"
        android:layout_marginTop="16dp" />

    <!-- Temperature TextView -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countrySearchEditText"
        android:layout_marginTop="16dp"
        android:text="Temperature: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idNumberTextView"
        android:layout_width="249dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="104dp"
        android:text="Student ID: S2120203"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>
